# ============================== Filebeat inputs ===============================
# No manual inputs; modules handle Suricata
filebeat.inputs: []

# ============================== Modules ======================================
filebeat.config.modules:
  path: ${path.config}/modules.d/*.yml
  reload.enabled: false

# ============================== Kibana =======================================
setup.kibana:
  host: "http://192.168.56.10:5601"

# ============================== Elasticsearch output =========================
output.elasticsearch:
  hosts: ["http://192.168.56.10:9200"]

# ============================== Logging ======================================
logging.to_files: true
logging.files:
  path: /var/log/filebeat
  name: filebeat.log
  keepfiles: 7
  permissions: 0644

# ============================== Processors (ECS enrichment) ==================
processors:
  - add_host_metadata: ~
  - add_cloud_metadata: ~
  - add_docker_metadata: ~
  - add_kubernetes_metadata: ~
